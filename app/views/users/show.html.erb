<!DOCTYPE html>
<html>
  <head>
    <title>Index</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "styles", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <ul class="ul-user">
      <li>
        <div class="user-img">
          <img src="<%= @user.photo %>" alt="user_photo"/>
        </div>
        <div class="data">
          <p class="name"><%= @user.name %></p>
          <p class="number-posts">number of post: <%= @user.post_counter %></p>
        </div>
      </li>
    </ul>
    <section>
      <div class="bio">
        <p class="bio-title">Bio</p>
        <%= @user.bio %>
      </div>
      <ul class="ul-posts">
        <% @posts.each do |p| %>
          <li class="post-user-section">
            <p class="post-title"><%= p.title %></p>
            <p class="post-text"><%= p.text %></p>
            <div class="interactions">
              <p>comments: <%= p.comments_counter %>,</p>
              <p>likes: <%= p.likes_counter %></p>
            </div>
          </li>
        <% end %>
      </ul>
    </section>
    <button class="btn-user-details">see all posts</button>   
  </body>
</html>