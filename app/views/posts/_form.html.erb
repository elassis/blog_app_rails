<%= form_with class:"post-form", model: @post, url: posts_create_path, method: :post, local: true, data: { turbo: false } do |form| %>
 
  <%= form.text_field :title, placeholder: "Type Post Title" %>
  <%= form.text_area :text, class:'text-area-post',placeholder: "Type Post Text" %>
  <%= form.submit %>
<% end %>