<%= form_with class:"form-comments", model: @comment, url: comments_create_path, method: :post, data: { turbo: false } do |form| %>
  <%= form.text_field "comment[text]", placeholder: "Type your comment" %>
   <%= form.hidden_field "comment[post_id]", value: params['id'], placeholder: "Type your comment" %>
  <%= form.submit %>
<% end %>